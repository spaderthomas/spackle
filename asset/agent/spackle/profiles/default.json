      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(htop:*)",
      "Bash(id:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(printf:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",
      "Bash(top:*)",
